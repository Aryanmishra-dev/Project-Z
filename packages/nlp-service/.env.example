# NLP Service Configuration
# Copy to .env and customize

# Service
SERVICE_NAME=nlp-service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Ollama LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct-q4_K_M
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_TOP_K=40
LLM_MAX_TOKENS=500

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
CACHE_TTL_DAYS=30
CACHE_KEY_PREFIX=nlp:

# Text Processing
CHUNK_SIZE_WORDS=800
CHUNK_OVERLAP_WORDS=200
MIN_CHUNK_WORDS=200
MAX_CHUNK_WORDS=1200

# Quality Thresholds
MIN_QUALITY_SCORE=0.4
AUTO_APPROVE_SCORE=0.6
